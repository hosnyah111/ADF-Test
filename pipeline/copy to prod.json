										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DelimitedText1",
									"type": "DatasetReference",
									"parameters": {
										"container": "prod",
										"file_name": {
											"value": "@concat(item().Table_Name, '-', utcnow('yyyyMMddHHmmss'))\n",
